<!DOCTYPE html>
<html>
<head>
  <title>InTag</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
  
  <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/flick/jquery-ui.css" />
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar is-info" role="navigation" aria-label="main navigation">
  <div class="container">
    <!-- logo -->
    <div class="navbar-brand">
      <a class="navbar-item">InTag</a>
    </div>

    <!-- menu -->
    <!-- <div class="navbar-menu"> -->
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="field is-grouped">
            <% if current_user %>
              <p class="control">
                <a class="navbar-item" style="display:inline;">Welcome <%= current_user.email %></a>
              </p>

              <p class="control">
                <a class="navbar-item" style="display:inline;"><%= link_to 'Logout', sessions_path, method: :delete %></a>
              </p>
            <% else %>
              <p class="control">
                <a class="navbar-item" id="newUserAnchor"><%= link_to 'New User', new_user_path %></a>
              </p>
              <p class="control">
                <a class="navbar-item is hoverable" id="loginAnchor"><%= link_to 'Login', new_session_path %></a>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <!-- </div> -->
  </div>
</nav>

<section class="hero is-fullheight is-dark is-bold">
    <div class="hero-body">
        <div class="container">
            <%= yield %>
        </div>
    </div>
</section>
<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p>
        <strong>InTag</strong> by <a>Team 18</a>.
      </p>
    </div>
  </div>
</footer>
</body>
</html>